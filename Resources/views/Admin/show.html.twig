{% extends "::admin.html.twig" %}

{% block title %}CMS страница {{page.title}} ({{page.url}}){% endblock title %}

{% block content %}
<h1>
  {% include('@AtomCms/Admin/_page_controlls.html.twig') %}
  "{{page.title}}"
</h1>

<div class="row-fluid">
  <div class="span6">
    <h4>URL</h4>
    <input type="text" disabled="disabled" value="{{ page.url }}" />
    
    <h4>Метатеги</h4>
    <ul>
    {% for name, value in page.metatags %}
      <li>&lt;meta name="{{ name }}" content="{{ value }}"&gt;</li>
    {% else %}
      <li>Не заданы</li>
    {% endfor %}
    </ul>
  </div>
</div>


<div class="well">
  <h4>Содержимое</h4>
  <p>{{page.content|raw}}</p>
</div>

{% endblock %}
