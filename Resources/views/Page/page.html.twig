{% extends "::layout.html.twig" %}

{% block title %}{{ page.title }}{% endblock title %}

{% block metatags %}
  {% for name, value in page.metatags %}
    <meta name="{{ name }}" content="{{ value }}">
  {% endfor %}
{% endblock metatags %}

{% block content %}

  {% if app.user and is_granted('ROLE_CM') %}
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-warning">
          <div class="panel-heading">
            <span class="panel-title">Управление</span>
          </div>
          <div class="panel-body">
            {% include('@AtomCms/Admin/_page_controlls.html.twig') %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  <div class="row">
    <div class="col-lg-12">
      <div class="typo mv-news-body">
        {{ page.content | raw }}
      </div>
    </div>
  </div>

{% endblock content %}
